<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="GuestBook.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:GuestBook.Views"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent
            Title="Gästbok"
            ContentTemplate="{DataTemplate views:GuestbookPage}"
            Icon="icon_notes" />

        <ShellContent
            Title="Om gästboken"
            ContentTemplate="{DataTemplate views:About}"
            Icon="icon_about" />
    </TabBar>

</Shell>
